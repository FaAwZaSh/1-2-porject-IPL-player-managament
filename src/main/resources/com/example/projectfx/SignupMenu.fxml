<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane minHeight="600.0" minWidth="800.0" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projectfx.SignupMenuController">
    <children>
        <ImageView fitHeight="600.0" fitWidth="1000.0" preserveRatio="true">
            <image>
                <Image url="@bg4.jpg" />
            </image>
        </ImageView>
        <VBox fillWidth="false">
            <children>
                <HBox fillHeight="false">
                    <children>
                        <AnchorPane prefHeight="188.0" prefWidth="294.0">
                            <children>
                                <Label layoutX="212.0" layoutY="148.0" text="Club:" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="28.0" />
                                    </font>
                                </Label>
                            </children>
                        </AnchorPane>
                        <AnchorPane prefHeight="188.0" prefWidth="404.0">
                            <children>
                                <TextField fx:id="usernameSignupField" layoutY="144.0" promptText="Enter username">
                                    <font>
                                        <Font size="20.0" />
                                    </font>
                                </TextField>
                            </children>
                        </AnchorPane>
                    </children>
                </HBox>
                <HBox prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <AnchorPane>
                            <children>
                                <Label layoutX="152.0" layoutY="30.0" text="Password:" textAlignment="JUSTIFY" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="28.0" />
                                    </font>
                                </Label>
                            </children>
                        </AnchorPane>
                        <AnchorPane prefHeight="220.0" prefWidth="262.0">
                            <children>
                                <TextField fx:id="passwordSignupField" layoutX="7.0" layoutY="28.0" promptText="Enter password" AnchorPane.topAnchor="28.0">
                                    <font>
                                        <Font size="20.0" />
                                    </font>
                                </TextField>
                            </children>
                        </AnchorPane>
                    </children>
                </HBox>
            <HBox prefHeight="273.0" prefWidth="821.0">
               <children>
                  <AnchorPane prefHeight="250.0" prefWidth="222.0">
                     <children>
                        <Label layoutX="17.0" layoutY="-6.0" text="Re-Enter Password:" textAlignment="JUSTIFY" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="28.0" />
                           </font>
                        </Label>
                     </children>
                  </AnchorPane>
                  <AnchorPane prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <TextField fx:id="confirmPassField" layoutX="21.0" promptText="Confirm password">
                           <font>
                              <Font size="20.0" />
                           </font>
                        </TextField>
                        <Button fx:id="backButton" layoutX="21.0" layoutY="93.0" mnemonicParsing="false" onAction="#backButtonClicked" text="Back">
                           <font>
                              <Font name="System Bold" size="20.0" />
                           </font>
                        </Button>
                     </children>
                  </AnchorPane>
                  <AnchorPane prefHeight="200.0" prefWidth="200.0">
                     <children>
                                <Button fx:id="confirmSignupButton" layoutX="-52.0" layoutY="93.0" mnemonicParsing="false" onAction="#confirmSignupButtonClicked" text="Confirm">
                                    <font>
                                        <Font name="System Bold" size="20.0" />
                                    </font>
                                </Button>
                     </children>
                  </AnchorPane>
               </children>
            </HBox>
            </children>
        </VBox>
    </children>
</StackPane>
